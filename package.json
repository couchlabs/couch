{
  "name": "couch",
  "description": "Stablecoin recurring payments infrastructure",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "turbo dev --ui=tui",
    "dev:cleanup": "bun scripts/alchemy.dev.cleanup.ts",
    "test": "turbo typecheck && turbo test:unit",
    "test:unit": "turbo test:unit",
    "lint": "biome lint .",
    "format": "biome format .",
    "typecheck": "turbo typecheck",
    "fix": "biome check . --write",
    "db:generate": "turbo db:generate",
    "infra:deploy": "turbo infra:deploy",
    "infra:destroy": "turbo infra:destroy"
  },
  "workspaces": {
    "packages": [
      "backend",
      "apps/*"
    ],
    "catalog": {
      "alchemy": "^0.79.0",
      "typescript": "^5.9.3"
    },
    "catalogs": {
      "cloudflare": {
        "miniflare": "^4.20251202.0",
        "@cloudflare/workers-types": "^4.20251202.0",
        "@types/node": "^24.10.1",
        "hono": "^4.10.7",
        "@cloudflare/vite-plugin": "^1.16.1"
      },
      "coinbase": {
        "@base-org/account": "2.5.0",
        "@coinbase/cdp-sdk": "^1.38.6"
      },
      "crypto": {
        "viem": "^2.41.2"
      },
      "react": {
        "react": "^19.2.1",
        "react-dom": "^19.2.1",
        "react-router-dom": "^7.10.0",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3"
      }
    }
  },
  "devDependencies": {
    "turbo": "latest",
    "bun": "latest",
    "@biomejs/biome": "latest"
  },
  "packageManager": "bun@1.3.0",
  "patchedDependencies": {
    "@base-org/account@2.5.0": "patches/@base-org%2Faccount@2.5.0.patch"
  }
}
