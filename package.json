{
  "name": "couch-poc",
  "type": "module",
  "private": true,
  "scripts": {
    "faucet": "bun node_modules/alchemy/src/coinbase/faucet.ts",
    "dev": "turbo run dev",
    "deploy": "turbo run deploy --ui=stream",
    "destroy": "turbo run destroy --ui=stream",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "workspaces": {
    "packages": [
      "apps/*"
    ],
    "catalog": {
      "alchemy": "https://pkg.pr.new/sam-goodwin/alchemy@b954271",
      "typescript": "^5.9.2"
    },
    "catalogs": {
      "cloudflare": {
        "miniflare": "^4.20250917.0",
        "@cloudflare/workers-types": "^4.20250922.0"
      },
      "coinbase": {
        "@base-org/account": "^2.3.1",
        "@coinbase/cdp-sdk": "^1.38.1"
      }
    }
  },
  "devDependencies": {
    "turbo": "latest",
    "prettier": "latest"
  },
  "packageManager": "bun@1.2.22",
  "prettier": {
    "semi": false
  }
}
