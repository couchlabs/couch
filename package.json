{
  "name": "couch",
  "description": "Stablecoin recurring payments infrastructure",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "turbo dev --ui=tui",
    "dev:cleanup": "bun scripts/alchemy.dev.cleanup.ts",
    "dev:faucet": "bun node_modules/alchemy/src/coinbase/faucet.ts",
    "test": "turbo typecheck && turbo test:unit",
    "test:unit": "turbo test:unit",
    "lint": "biome lint .",
    "format": "biome format .",
    "typecheck": "turbo typecheck",
    "fix": "biome check . --write",
    "gh:setup:dev": "alchemy deploy scripts/github.dev.environment.ts",
    "gh:setup:staging": "alchemy deploy scripts/github.staging.environment.ts",
    "gh:setup:prod": "alchemy deploy scripts/github.prod.environment.ts",
    "db:generate": "turbo db:generate",
    "infra:deploy": "turbo infra:deploy",
    "infra:destroy": "turbo infra:destroy"
  },
  "workspaces": {
    "packages": [
      "backend",
      "apps/*"
    ],
    "catalog": {
      "alchemy": "^0.79.0",
      "typescript": "^5.9.3"
    },
    "catalogs": {
      "cloudflare": {
        "miniflare": "^4.20251125.0",
        "@cloudflare/workers-types": "^4.20251128.0",
        "@types/node": "^24.10.1",
        "hono": "^4.10.7"
      },
      "coinbase": {
        "@base-org/account": "2.5.0",
        "@coinbase/cdp-sdk": "^1.38.6"
      }
    }
  },
  "devDependencies": {
    "turbo": "latest",
    "bun": "latest",
    "@biomejs/biome": "latest"
  },
  "packageManager": "bun@1.3.0",
  "patchedDependencies": {
    "@base-org/account@2.5.0": "patches/@base-org%2Faccount@2.5.0.patch"
  }
}
