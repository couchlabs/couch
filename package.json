{
  "name": "couch-poc",
  "type": "module",
  "private": true,
  "scripts": {
    "cdp:init": "bun ./scripts/cdp-create-wallets && bun ./scripts/cdp-fund-wallets",
    "cdp:faucet": "bun ./scripts/cdp-fund-wallets",
    "dev": "turbo run dev",
    "deploy": "turbo run deploy --ui=stream",
    "destroy": "turbo run destroy --ui=stream",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "workspaces": {
    "packages": [
      "apps/*"
    ]
  },
  "dependencies": {
    "turbo": "latest",
    "prettier": "latest",
    "@coinbase/cdp-sdk": "latest"
  },
  "packageManager": "bun@1.2.22",
  "prettier": {
    "semi": false
  }
}
