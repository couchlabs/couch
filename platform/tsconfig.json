{
  "include": [
    "alchemy.run.ts",
    "drizzle.config.ts",
    "vite.config.ts",
    "backend/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    "rootDir": ".",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["@cloudflare/workers-types", "node", "bun"],
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@alchemy.run": ["./alchemy.run"],
      "@backend/*": ["./backend/src/*"],
      "@backend-types/*": ["./backend/types/*"],
      "@backend-tests/*": ["./backend/tests/*"],
      "@app-client/*": ["./app/src/client/*"],
      "@app-api/*": ["./app/src/api/*"],
      "@app-types/*": ["./app/types/*"]
    }
  }
}
