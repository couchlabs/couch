{
  "include": ["alchemy.run.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./lib",
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types", "node"],
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  }
}
