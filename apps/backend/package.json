    }
  },
  "dependencies": {
    "@base-org/account": "catalog:coinbase",
    "@coinbase/cdp-sdk": "catalog:coinbase",
    "hono": "catalog:cloudflare",
    "viem": "^2.38.0",
    "drizzle-orm": "^0.44.6"
  },
  "devDependencies": {
    "alchemy": "catalog:",
    "miniflare": "catalog:cloudflare",
    "@cloudflare/workers-types": "catalog:cloudflare",
    "@types/node": "catalog:cloudflare",
    "typescript": "catalog:",
    "drizzle-kit": "^0.31.5",
    "@types/bun": "latest"
  }
}
