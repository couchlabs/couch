{
  "include": [
    "alchemy.run.ts",
    "drizzle.config.ts",
    "database/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    "rootDir": ".",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types", "node", "bun"],
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@database/*": ["./database/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
