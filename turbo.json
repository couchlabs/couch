{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:unit": {
      "cache": false
    },
    "//#lint": {
      "cache": false
    },
    "//#format": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "//#fix": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["test"]
    },
    "infra:deploy": {
      "cache": false,
      "env": ["STAGE", "GITHUB_ACTIONS", "GITHUB_SHA", "PULL_REQUEST"],
      "passThroughEnv": [
        "ALCHEMY_PASSWORD",
        "ALCHEMY_STATE_TOKEN",
        "ALCHEMY_TELEMETRY_DISABLED",
        "DO_NOT_TRACK",
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_ACCOUNT_ID",
        "CDP_API_KEY_ID",
        "CDP_API_KEY_SECRET",
        "CDP_WALLET_SECRET",
        "CDP_CLIENT_API_KEY",
        "COUCH_WEBHOOK_SECRET",
        "COUCH_API_KEY",
        "GITHUB_TOKEN",
        "GITHUB_OUTPUT"
      ]
    },
    "infra:destroy": {
      "cache": false,
      "env": ["STAGE", "GITHUB_ACTIONS", "GITHUB_SHA", "PULL_REQUEST"],
      "passThroughEnv": [
        "ALCHEMY_PASSWORD",
        "ALCHEMY_STATE_TOKEN",
        "ALCHEMY_TELEMETRY_DISABLED",
        "DO_NOT_TRACK",
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_ACCOUNT_ID",
        "CDP_API_KEY_ID",
        "CDP_API_KEY_SECRET",
        "CDP_WALLET_SECRET",
        "CDP_CLIENT_API_KEY",
        "COUCH_WEBHOOK_SECRET",
        "COUCH_API_KEY",
        "GITHUB_TOKEN",
        "GITHUB_OUTPUT"
      ]
    }
  }
}
