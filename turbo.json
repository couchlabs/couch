{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:unit": {
      "cache": false
    },
    "//#lint": {
      "cache": false
    },
    "//#format": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "//#fix": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["test"]
    },
    "infra:deploy": {
      "dependsOn": ["^infra:deploy"],
      "cache": false,
      "env": [
        "STAGE",
        "DO_NOT_TRACK",
        "PULL_REQUEST",
        "GITHUB_ACTIONS",
        "GITHUB_SHA",
        "GITHUB_TOKEN",
        "GITHUB_OUTPUT",
        "ALCHEMY_PASSWORD",
        "ALCHEMY_TELEMETRY_DISABLED",
        "ALCHEMY_STATE_TOKEN",
        "CLOUDFLARE_ACCOUNT_ID",
        "CLOUDFLARE_API_TOKEN",
        "CDP_API_KEY_ID",
        "CDP_API_KEY_SECRET",
        "CDP_WALLET_SECRET",
        "CDP_CLIENT_API_KEY",
        "TEST_COUCH_ACCOUNT_WEBHOOK_SECRET",
        "TEST_COUCH_ACCOUNT_ADDRESS",
        "TEST_COUCH_ACCOUNT_APIKEY"
      ]
    },
    "infra:destroy": {
      "cache": false,
      "env": [
        "STAGE",
        "DO_NOT_TRACK",
        "PULL_REQUEST",
        "GITHUB_ACTIONS",
        "GITHUB_SHA",
        "GITHUB_TOKEN",
        "GITHUB_OUTPUT",
        "ALCHEMY_PASSWORD",
        "ALCHEMY_TELEMETRY_DISABLED",
        "ALCHEMY_STATE_TOKEN",
        "CLOUDFLARE_ACCOUNT_ID",
        "CLOUDFLARE_API_TOKEN",
        "CDP_API_KEY_ID",
        "CDP_API_KEY_SECRET",
        "CDP_WALLET_SECRET",
        "CDP_CLIENT_API_KEY",
        "TEST_COUCH_ACCOUNT_WEBHOOK_SECRET",
        "TEST_COUCH_ACCOUNT_ADDRESS",
        "TEST_COUCH_ACCOUNT_APIKEY"
      ]
    },
    "backend#infra:destroy": {
      "dependsOn": ["playground#infra:destroy"],
      "cache": false
    },
    "playground#infra:destroy": {
      "cache": false
    }
  }
}
