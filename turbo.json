{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "globalEnv": [
    "STAGE",
    "DO_NOT_TRACK",
    "PULL_REQUEST",
    "GITHUB_*",
    "ALCHEMY_*",
    "CLOUDFLARE_*",
    "CDP_*"
  ],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "cache": false
    },
    "//#lint": {
      "cache": false
    },
    "//#format": {
      "cache": false
    },
    "//#fix": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "infra:deploy": {
      "dependsOn": ["^infra:deploy"],
      "cache": false
    },
    "infra:destroy": {
      "cache": false
    }
  }
}
